@model IEnumerable<ProyectoFinalCerveceria.Models.Product>

@{
    ViewBag.Title = "Index";
}
<div class="container">
    <h2>Catálogo de Productos</h2>

    <p>
      @Html.ActionLink("Nuevo", "Create", new { area = "" }, new { @class = "btn btn-primary glyphicon glyphicon-file" })
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stock)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProductCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Stock)
        </td>
        <td>
            @Html.ActionLink(" ", "Edit", new { id = item.ProductId }, new { @class = "btn btn-info glyphicon glyphicon-pencil" }) |
            @Html.ActionLink(" ", "Details", new { id = item.ProductId }, new { @class = "btn btn-success glyphicon glyphicon-th-list" }) |
            @Html.ActionLink(" ", "Delete", new { id = item.ProductId }, new { @class = "btn btn-danger glyphicon glyphicon-trash" })
        </td>
    </tr>
        }

    </table>
</div>