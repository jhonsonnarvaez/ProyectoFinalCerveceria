@model IEnumerable<ProyectoFinalCerveceria.Models.Product>
@{
    ViewBag.Title = "CatalogProduct";
}
<div class="row">
    <div class="col-lg-12 col-md-6 col-sm-6 col-xs-12">
        <img alt="Chania" class="img-responsive" src="~/img/nuestrosProductos.jpg" />
    </div>
</div>
<br />
<br />
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-xs-6 col-md-3">
                <div class="thumbnail">
                    @if (item.Image != null)
                    {
                        <img src="data:image/jpeg;base64,@(Convert.ToBase64String(item.Image))">
                        <div class="caption" style="text-align:center; font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;font-size:16px">
                            @Html.DisplayFor(modelItem => item.ProductName)
                        </div>
                    }
                    else
                    {
                        <img data-src="holder.js/100%x180" alt="100%x180" style="height: 180px; width: 100%; display: block;" data-holder-rendered="true">
                        <div class="caption" style="text-align:center; font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;font-size:16px">
                            @Html.DisplayFor(modelItem => item.ProductName)
                        </div>
                    }
                </div>
            </div>
        }
    </div>
